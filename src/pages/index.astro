---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const last_posts = posts.slice(0, 3);
---
<BaseLayout sideBarActiveItemID="home">
  <div class="flex flex-col lg:flex-row">
    <!-- Left Column -->
    <div id="profile_picture" class="p-8 rounded-lg flex-shrink-0 lg:flex-shrink-1">
      <div class="justify-start">
        <img
          src="/profile_picture.png"
          alt="Profile Picture"
          class="w-40 h-40 rounded-full border-4 border-gray-300"/>
      </div>
    </div>
    <!-- Right column -->
    <div id = "right_side" class="flex-grow">
      <div class="pb-12 mt-5">
        <div class="text-3xl py-1">Hey there,</div>
        <div class="text-5xl font-bold">I'm Aryaman Khandelwal</div>
        <div class="text-l py-1 px-2">
          COMPUTER SCIENCE & AI UNDERGRADUATE AT PLAKSHA UNIVERSITY
        </div>
        <div class="py-2">
          <text class="text-lg">
            A curious learner, who is passionate in the fronts of Machine
            Learning, Data Science & AI. Loves solving challenging coding
            problems. Has built several projects which provide solutions to
            real-world problems.
          </text>
        </div>
      </div>
      <div>
        <div class="text-3xl w-full font-bold mb-2">Projects</div>
        <div class="divider my-0"></div>
        <HorizontalCard
          title="chatur.ai"
          img="/chatur.ai-logo.png"
          desc="Chatur.ai is an AI-powered platform for personalized learning, which allows users to upload their own study materials and generate personalized lecture plans based on their interests and needs."
          url="https://github.com/suhani221/hackmol"
        />
      </div>
      <div class="divider my-0"></div>
      <HorizontalCard
        title="Onestox"
        img="/onestox.png"
        desc="Onestox is a stock aggregrator platform that provides insights, news and Twitter sentiment analysis for your interested stocks. "
        url="https://github.com/nikhilhenry/onestox"
      />
      <div class="divider my-0"></div>
      <HorizontalCard
        title="Cloudit"
        img="/cloudit-bg.png"
        desc="Cloudit is a web application that simulates the functioning of Data Centers with its Servers, Virtual Machines & Jobs."
        url="https://github.com/Aryaman-13/CloudIt_ILGC"
      />
      </BaseLayout>
    </div>
  </div>
</div>
</BaseLayout>
